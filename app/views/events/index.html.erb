<h1 class="text-center rows"> Events organized by you:</h1>
<div class="col-md-12 ">
  <% @events.each do |event| %>
    <div class="col-md-4 panel panel-default">
            <%= link_to event.name, event_path(event.id), class: "double_size" %>
    <%= image_tag event.image_url, class: "foreground_image" %>

     <p><%= event.description %></p>
    </div>
    <%end%>
</div>
<br>
<div class="col-md-12 text-center double_size">
<%= link_to "New event", new_event_path, class:"btn btn-primary "%>
</div>
