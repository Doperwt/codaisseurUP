
<%= form_for(@profile) do |f| %>
  <div class="form-group">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, class: "form-control", autofocus: true,placeholder: 'First name', autocomplete: "off" %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, autocomplete: "off",placeholder: 'last_name',class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_field :bio, autocomplete: "off",placeholder: 'Fill in your bio',class: "form-control" %>
  </div>
<div class="actions">
  <%= f.submit (@profile.new_record? ? "Create" : "Update"), class: "btn btn-primary" %>
</div>
<% end %>
